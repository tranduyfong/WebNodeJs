            <% listUsers.forEach(function(user) { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.age %></td>
                    <td><%= user.phone_number %></td>
                    <td><%= user.address %></td>
                    <td>
                        <a href="/update/<%= user.id %>">Edit</a>
                        <a href="/delete/<%= user.id %>">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </table>

</body>

